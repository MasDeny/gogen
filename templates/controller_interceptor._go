// Authorized ...
func (r *Controller)Authorized(next http.Handler) http.HandlerFunc {
	return func(w http.ResponseWriter, r *http.Request) {
		authorized := true
		if !authorized {
			http.Error(w, NewErrorResponse(errors.New("Not Authorized")), http.StatusForbidden)
			return
		}
		next.ServeHTTP(w, r)
	}
}