package controller

import (
	"{{.PackagePath}}/infrastructure/util"
	"{{.PackagePath}}/shared/errcat"
)

type Response struct {
	Success      bool        `json:"success"`
	ErrorCode    string      `json:"errorCode"`
	ErrorMessage string      `json:"errorMessage"`
	Data         interface{} `json:"data"`
}

func NewSuccessResponse(data interface{}) string {
	var res Response
	res.Success = true
	res.Data = data
	return util.ToJSON(res)
}

func NewErrorResponse(err error) string {
	var res Response
	res.Success = false

	et, ok := err.(errcat.ErrorWithCode)
	if !ok {
		res.ErrorCode = "UNDEFINED"
		res.ErrorMessage = err.Error()
		return util.ToJSON(res)
	}

	res.ErrorCode = et.Code()
	res.ErrorMessage = et.Error()
	return util.ToJSON(res)
}
