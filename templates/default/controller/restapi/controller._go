package {{LowerCase .ControllerName}}

import (
	"encoding/json"
	"fmt"
	"io/ioutil"
	"net/http"

	"{{.PackagePath}}/controller"
	"{{.PackagePath}}/infrastructure/log"
	"{{.PackagePath}}/infrastructure/util"
	"{{.PackagePath}}/shared/errcat"
	"{{.PackagePath}}/usecase/{{LowerCase .UsecaseName}}/port"
)

// {{PascalCase .UsecaseName}} ...
func {{PascalCase .UsecaseName}}Handler(inputPort port.{{PascalCase .UsecaseName}}Inport) http.HandlerFunc {

	return func(w http.ResponseWriter, r *http.Request) {

		ctx := log.ContextWithOperationID(r.Context())

		jsonReq, _ := ioutil.ReadAll(r.Body)

		log.InfoRequest(ctx, string(jsonReq))

		var req port.{{PascalCase .UsecaseName}}Request

		if err := json.Unmarshal(jsonReq, &req); err != nil {
			newErr := errcat.FailUnmarshalResponseBodyError
			log.ErrorResponse(ctx, newErr)
			http.Error(w, controller.NewErrorResponse(newErr), http.StatusBadRequest)
			return
		}

		res, err := inputPort.Execute(ctx, req)
		if err != nil {
			log.ErrorResponse(ctx, err)
			http.Error(w, controller.NewErrorResponse(err), http.StatusBadRequest)
			return
		}

		log.InfoResponse(ctx, util.MustJSON(res))
		fmt.Fprint(w, controller.NewSuccessResponse(res))

	}
}
