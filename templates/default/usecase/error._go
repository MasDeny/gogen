package usecase

import (
	"strings"
)

type ErrorType string

type errorContextType string

const ErrorContextValue = errorContextType("ERROR_CONTEXT")

func (r ErrorType) Error() string {
	return string(r)
}

func (r ErrorType) Message() string {
	index := strings.Index(string(r), " ")
	return string(r[index+1:])
}

func (r ErrorType) Code() string {
	index := strings.Index(string(r), " ")
	return string(r[:index])
}

const (
	SomethingWrong = ErrorType("1001 Something goes wrong")
	AnotherProblem = ErrorType("1002 Another problem happen")
	CommonIssue    = ErrorType("1003 Common Issue")
)
