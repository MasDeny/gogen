package {{LowerCase .ControllerName}}

import (
	"net/http"

	"github.com/gin-gonic/gin"

    "{{.PackagePath}}/shared/infrastructure/config"
	"{{.PackagePath}}/shared/infrastructure/logger" {{range .Usecases}}
    "{{$.PackagePath}}/domain_{{$.DomainName}}/usecase/{{LowerCase .Name}}" {{end}}
    "{{.PackagePath}}/shared/usecase"
)

type Controller struct {
	Router gin.IRouter
	Config *config.Config
    Log    logger.Logger {{range .Usecases}}
    {{PascalCase .Name}}Inport usecase.Inport[{{LowerCase .Name}}.InportRequest, {{LowerCase .Name}}.InportResponse] {{end}}
}

// RegisterRouter registering all the router
func (r *Controller) RegisterRouter() { {{range .Usecases}} {{if StartWith (LowerCase .Name) "get"}}
    r.Router.GET("/{{LowerCase .Name}}", r.authorized(), r.{{CamelCase .Name}}Handler()) {{else}}
    r.Router.POST("/{{LowerCase .Name}}", r.authorized(), r.{{CamelCase .Name}}Handler()) {{end}} {{end}}
}
